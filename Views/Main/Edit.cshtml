@model ContactModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Edit Contact
    </div>
    <div class="card-body">

        <form asp-action="Edit" asp-controller="Main" method="post">
            <div class="form-group mb-2">
                <label for="formId">Id Contact</label>
                <input asp-for="IdContact" type="hidden" class="form-control" id="formId">
            </div>

            <div class="form-group mb-2">
                <label for="formNombre">Name</label>
                <input asp-for="Name" type="text" class="form-control" id="formNombre" placeholder="Put a Name">
            </div>

            <div class="form-group mb-2">
                <label for="formTelephone">Telephone</label>
                <input asp-for="Telephone" type="text" class="form-control" id="formTelephone" placeholder="11 60018882">
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="formEmail">Correo</label>
                <input asp-for="Mail" type="email" class="form-control" id="formEmail" placeholder="john@doe.com">
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="GetList" asp-controller="Main" class="btn btn-warning mx-1">Back To List</a>
        </form>

    </div>
</div>

