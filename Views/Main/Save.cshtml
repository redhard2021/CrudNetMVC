@model ContactModel
@{
    ViewData["Title"] = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Crear Contacto
    </div>
    <div class="card-body">
        
        <form asp-action="Save" asp-controller="Main" method="post">
            <div class="form-group mb-2">
                <label for="formNombre">Name</label>
                <input asp-for="Name" type="text" class="form-control" id="formNombre" placeholder="Put a Name">
                <span asp-validation-for="Name" class="text-danger"></span>
                
            </div>
            <div class="form-group mb-2">
                <label for="formTelephone">Telephone</label>
                <input asp-for="Telephone" type="text" class="form-control" id="formTelephone" placeholder="11 60018882">
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <div class="form-group mb-3" >
                <label for="formEmail">Email</label>
                <input asp-for="Mail" type="email" class="form-control" id="formEmail" placeholder="john@doe.com">
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="GetList" asp-controller="Main" class="btn btn-warning mx-1">Back to List</a>
        </form>

    </div>
</div>

