@model ContactModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Delete Contact
    </div>
    <div class="card-body">

        <form asp-action="Delete" asp-controller="Main" method="post">
            <input asp-for="IdContact" type="hidden" class="form-control" />
            <div class="alert alert-danger" role="alert">
                Do you want to delete this Contact? : @Html.DisplayTextFor( m => m.Name)
            </div>

            <button type="submit" class="btn btn-primary">Delete</button>
            <a asp-action="GetList" asp-controller="Main" class="btn btn-warning mx-1">Back to List</a>
        </form>

    </div>
</div>

